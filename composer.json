{
    "name": "kadimi/wp-starter-plugin",
    "description": "WordPress Starter Plugin",
    "homepage": "https://github.com/kadimi/wp-starter-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Nabil Kadimi",
            "email": "nabil@kadimi.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "kadimi/wpstarter": "^1.0"
    },
    "require-dev": {
        "kint-php/kint": "^5.1",
        "wp-coding-standards/wpcs": "^3.1"
    },
    "scripts": {
        "phpcs": "@php ./vendor/bin/phpcs --ignore=build,vendor,node_modules --standard=WordPress",
        "phpcbf": "@php ./vendor/bin/phpcbf --ignore=build,vendor,node_modules --standard=WordPress"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}